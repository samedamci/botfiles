[user]
	name = wzykubek
	email = wz-git@mailbox.org
	signingkey = ~/.ssh/id_rsa
[gpg]
  format = ssh
[format]
	pretty = oneline
[log]
	abbrevCommit = true
[diff]
  tool = kitty
  guitool = kitty.gui
[difftool]
  prompt = false
  trustExitCode = true
[difftool "kitty"]
  cmd = kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
  cmd = kitten diff $LOCAL $REMOTE
