#!/bin/sh

# Run dwm bar with modules.

sym="|"
echo "$$" > "$HOME/.cache/dbar.pid"

cd "$HOME/.local/bin/scripts/dwmbar/" || exit 1

status() {
cat << EOF
$(./torrent) $sym
$(./disk) $sym
$(./internet) $sym
$(./lamp) $sym
$(./music) $sym
$(./alsa) $sym
$(./news) $sym
$(./mails) $sym
$(./packages) $sym
$(./date) $sym
$(./clock)
EOF
}

while :; do
  [ "$(transmission-remote -l 2>/dev/null | grep %)" ] &&
    delay="10s" || delay="1m"

  xsetroot -name " $(status | tr '\n' ' ')"

  sleep "$delay"
done
