#~~~~~~
# APPS
#~~~~~~
# qutebrowser
super + b 
	qutebrowser
# st
super + Return
	tabbed -r 2 st -w ''
# vifm
super + r
	st -e vifm
# fzf
super + f
	st -e zsh -c 'vifm "$(find . -type d | fzf)";'
# rofi
super + d
	rofi -show drun
# neomutt
	XF86Mail
	st -e neomutt
	super + g
	st -e neomutt


