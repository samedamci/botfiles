super + Return
	$($TERMINAL)
super + {_,ctrl,alt +} b
	{search,chromium,tor-browser}
super + {_,shift +} d
	rofi -show {run,drun}
super + shift + s
	tgscreenkey
super + c
	compos

super + s; {t,m,n,v,c,p}
	{tuirent,mails,rss,fm,ncmp,pods}
super + a; {g,k,l,i,m}
	{gimp,keepassxc,libreoffice,inkscape,minecraft-launcher}

super + {_,ctrl +} m
	rofi-mpd {-a,-s} && refbar
super + apostrophe
	mpdqueue
XF86Tools
	mpdrandom
{Prior,super + x}
	slock
super + z
	powermenu
super + u
	update
super + n
	rofi-todo -f $HOME/doc/notes/notes.json
super + {_,shift +} e
	{unicode,fawesome}
super + w
	choosewall

{_,shift,ctrl +} Print
	screenshot {_,--force,--force_area}
{_,shift +} Home
	{_,u}mounter
{_,ctrl +} F10
	{curl 192.168.1.201/toggle.php && refbar,$BROWSER 192.168.1.201}
{_,shift +} F11
	blaze {_,-s}
End
	sh -c "slock & systemctl suspend"
Pause
	syncnow

# mute
XF86AudioMute
	amixer sset Master toggle && refbar
# volume control
XF86Audio{Raise,Lower}Volume
	amixer sset Master 5%{+,-} && refbar
# songs control
XF86Audio{Next,Prev}
	playerctl {next,previous} && refbar
ctrl + XF86Audio{Next,Prev}
	mpc seek {+,-}4
# pause/play
{XF86AudioPlay,super + slash}
	playerctl play-pause && refbar
# stop
XF86AudioStop
	playerctl stop && refbar

ctrl + alt + {Left,Up,Down,Right}
	rotscreen {left,normal,inverted,right}
