super + Return
	$($TERMINAL)
super + {_,ctrl,alt +} b
	{search,chromium,tor-browser}
super + {_,shift +} d
	rofi -show {run,drun}
super + shift + s
	tgscreenkey
super + c
	compos

super + s; {t,m,n,v,c,p}
	{tuirent,mails,rss,fm,ncmp,pods}
super + a; {g,k,l,i,m}
	{gimp,keepassxc,libreoffice,inkscape,minecraft-launcher}

super + {_,ctrl +} m
	rofi-mpd {-a,-s} && refbar
super + apostrophe
	mpdqueue
XF86Tools
	mpdrandom
{Prior,super + x}
	slock
super + z
	powermenu
super + u
	update
super + n
	rofi-todo -f $HOME/doc/notes/notes.json
super + {_,shift +} e
	{unicode,fawesome}
super + w
	choosewall

{_,shift,ctrl +} Print
	screenshot {_,--force,--force_area}
{_,ctrl +} button10
	screenshot {--force_area,--force}
{_,shift +} Home
	{_,u}mounter
{_,ctrl +} F10
	{curl 192.168.1.201/toggle.php && refbar,$BROWSER 192.168.1.201}
{_,shift +} F11
	blaze {_,-s}
End
	sh -c "slock & systemctl suspend"
Pause
	syncnow

# mute
XF86AudioMute
	amixer sset Master toggle && pkill -RTMIN+1 dwmblocks
# volume control
XF86Audio{Raise,Lower}Volume
	amixer sset Master 5%{+,-} && pkill -RTMIN+1 dwmblocks
# songs control
XF86Audio{Next,Prev}
	playerctl {next,previous} && pkill -RTMIN+2 dwmblocks
ctrl + XF86Audio{Next,Prev}
	mpc seek {+,-}4
# pause/play
{XF86AudioPlay,super + slash}
	playerctl play-pause && pkill -RTMIN+2 dwmblocks
# stop
XF86AudioStop
	playerctl stop && pkill -RTMIN+2 dwmblocks

ctrl + alt + {Left,Up,Down,period}
	rotscreen {left,normal,inverted,right}

button6
	if [ `ps x | grep $(xdotool getactivewindow getwindowpid) | awk 'NR==1 \{print $5\}'` = "/usr/lib/chromium/chromium" ]; then if [ `xdotool getmouselocation | awk '\{print $2\}' | sed 's/y://g'` -gt 18 ]; then xte "keydown Control_L" "keydown Shift_L" "keydown Tab" "keyup Control_L" "keyup Shift_L" "keyup Tab"; else xte "keydown Super_L" "keydown comma" "keyup Super_L" "keyup comma"; fi; else xte "keydown Super_L" "keydown comma" "keyup Super_L" "keyup comma"; fi
button7
	if [ `ps x | grep $(xdotool getactivewindow getwindowpid) | awk 'NR==1 \{print $5\}'` = "/usr/lib/chromium/chromium" ]; then if [ `xdotool getmouselocation | awk '\{print $2\}' | sed 's/y://g'` -gt 18 ]; then xte "keydown Control_L" "keydown Tab" "keyup Control_L" "keyup Tab"; else xte "keydown Super_L" "keydown period" "keyup Super_L" "keyup period"; fi; else xte "keydown Super_L" "keydown period" "keyup Super_L" "keyup period"; fi
