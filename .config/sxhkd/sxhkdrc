super + Return
	$TERMINAL
super + shift + b
	$BROWSER
super + b
	search
super + ctrl + b
	torbrowser-launcher
super + d
	rofi -show run
super + shift + d
	rofi -show drun
super + shift + s
	tgscreenkey

super + s; {t,m,n,v}
	{tuirent,mails,rss,fm}
super + shift + o; {g,k,l,i}
	{gimp,keepassxc,libreoffice,inkscape}

super + m
	rofi-mpd -a
super + x
	slock
super + z
	powermenu
super + u
	update
super + n
	rofi-todo -f $HOME/doc/notes/notes.json
super + e
	unicode
super + shift + e
	fawesome
super + w
	choosewall

Print
	screenshot
shift + Print
	screenshot --force
F1
	mounter
shift + F1
	umounter
F10
	curl 192.168.1.201/toggle.php && refbar
F11
	[ $(pgrep ffmpeg) ] && blaze -s || blaze
End
	slock; systemctl suspend
Pause
	syncnow


#~~~~~~~
# AUDIO
#~~~~~~~
# Mute
XF86AudioMute
	amixer sset Master toggle && refbar
# Volume control
XF86Audio{Raise,Lower}Volume
	amixer sset Master 5%{+,-} && refbar
# Songs control
XF86Audio{Next,Prev}
	mpc {next,prev} && refbar
# Pause/play
XF86AudioPlay
	mpc toggle && refbar
# Stop
XF86AudioStop
	mpc stop && refbar
